import java.util.Arrays;

public class Create2DMatrix {
  public static void main(String[] args) {
    // Create a 2D matrix with 3 rows and 4 columns
    int[][] matrix = new int[3][4];

    // Initialize the matrix with some values
    matrix[0][0] = 1;
    matrix[0][1] = 2;
    matrix[0][2] = 3;
    matrix[0][3] = 4;
    matrix[1][0] = 5;
    matrix[1][1] = 6;
    matrix[1][2] = 7;
    matrix[1][3] = 8;
    matrix[2][0] = 9;
    matrix[2][1] = 10;
    matrix[2][2] = 11;
    matrix[2][3] = 12;

    // Print the matrix using Arrays.deepToString()
    System.out.println("Matrix:");
    System.out.println(Arrays.deepToString(matrix));

    // Use Arrays.fill() to fill a row with a value
    Arrays.fill(matrix[1], 0);
    System.out.println("Matrix after filling row 1 with 0:");
    System.out.println(Arrays.deepToString(matrix));

    // Use Arrays.copyOf() to copy a row
    int[] newRow = Arrays.copyOf(matrix[0], matrix[0].length);
    System.out.println("Copied row:");
    System.out.println(Arrays.toString(newRow));
  }
}
